    "/PublicHolidays": {
      "get": {
        "tags": [
          "Holidays"
        ],
        "summary": "Returns list of public holidays for a given country",
        "parameters": [
          {
            "name": "countryIsoCode",
            "in": "query",
            "description": "ISO 3166-1 code of the country",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "DE"
          },
          {
            "name": "validFrom",
            "in": "query",
            "description": "Start of the date range",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "example": "2023-01-01"
          },
          {
            "name": "validTo",
            "in": "query",
            "description": "End of the date range",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "example": "2023-12-31"
          },
          {
            "name": "languageIsoCode",
            "in": "query",
            "description": "ISO-639-1 code of a language or empty",
            "schema": {
              "type": "string"
            },
            "example": "DE"
          },
          {
            "name": "subdivisionCode",
            "in": "query",
            "description": "Code of the subdivision or empty",
            "schema": {
              "type": "string"
            },
            "example": "DE-BE"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
